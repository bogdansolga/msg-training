<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{HH:mm:ss}] [%t] %highlight{%-5level} %logger{1.}.(%M, %L) - %msg%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Logger name="com.msgsystems.training.w04d03" level="WARN"/>

        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>